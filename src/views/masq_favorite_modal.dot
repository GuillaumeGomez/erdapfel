<div class="modal__masq_favorite">
  <div class="modal__masq_favorite__header">
    <div class="icon-masq modal__masq_favorite__logo"></div>
    <i class="icon-x modal__masq_favorite__close" {{= click(this.close, this) }}></i>
  </div>

  <div class="modal__masq_favorite__body">
    <h2 class="modal__title">{{= _('Qwant Maps + Masq is the solution for a web mapping service respecting your privacy!') }}</h2>

    <div class="modal__subtitle">
      <div class="modal__masq_favorite__details">
        <i class="modal__masq_favorite__arrow"></i>
        <div {{= click(this.openOnboarding, this)}}>{{= _('More Details') }}</div>
      </div>
    </div>

    <div class="modal__masq_favorite__question">{{= _('Do you want to synchronize your favorites with Masq ?') }}</div>

    <div class="modal__masq_favorite__buttons">
      <button class="modal__masq_favorite__button" {{= click(this.openMasq, this) }}>{{= _('Activate Masq') }}</button>
      <button class="modal__masq_favorite__button modal__masq_favorite__secondary_button" {{= click(this.close, this) }}>{{= _('No thanks') }}</button>
    </div>

    <div class="modal__masq_favorite__again">
      <input type="checkbox" class="modal__masq_favorite__again_checkbox" name="doNotAsk" id="doNotAsk"></input>
      <label for="doNotAsk">{{= _('Do not ask again') }}</label>
    </div>
  </div>
</div>
