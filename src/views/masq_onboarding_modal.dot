<div class="modal__masq_onboarding">
    <div class="modal__masq_onboarding__steps">

      {{? this.step === 1}}
        <div class="modal__masq_onboarding__first_header">
          <div class="icon-masq modal__masq_onboarding__logo"></div>
          <i class="icon-x modal__masq_onboarding__close" {{= click(this.close, this) }}></i>
        </div>
      {{??}}

        <div class="modal__masq_onboarding__header">

          {{? this.step === 2}}
            <div>{{= _('What is Masq?')}}</div>
          {{?? this.step === 3}}
            <div>{{= _('How does Masq work?')}}</div>
          {{?? this.step === 4}}
            <div>{{= _('Why use Masq?')}}</div>
          {{?}}

          <i class="icon-x modal__masq_onboarding__close" {{= click(this.close, this) }}></i>
        </div>
      {{?}}

      <div class="modal__masq_onboarding__body">
        <div class="modal__masq_onboarding__middle">
          <div class="modal__masq_onboarding__chevron_container">
            {{? this.step !== 1}}
              <div class="modal__masq_onboarding__chevron icon-chevron-left" {{= click(this.previousStep, this)}}></div>
            {{?}}
          </div>

          {{? this.step === 1}}
            <div class="modal__masq_onboarding__image modal__masq_onboarding__image_1"></div>
          {{?? this.step === 2}}
            <div class="modal__masq_onboarding__image modal__masq_onboarding__image_2"></div>
          {{?? this.step === 3}}
            <div class="modal__masq_onboarding__image modal__masq_onboarding__image_3"></div>
          {{?? this.step === 4}}
            <div class="modal__masq_onboarding__image modal__masq_onboarding__image_4"></div>
          {{?}}

          <div class="modal__masq_onboarding__chevron_container">
            {{? this.step !== 4}}
              <div class="modal__masq_onboarding__chevron icon-chevron-right" {{= click(this.nextStep, this)}}></div>
            {{?}}
          </div>
        </div>

        {{? this.step === 1}}
          <div class="modal__masq_onboarding__text">{{= _('Welcome to Masq!') }}</div>
        {{?? this.step === 2}}
          <div class="modal__masq_onboarding__text">{{= _('Masq allows you to store all your preferences while guarantying your privacy')}}</div>
        {{?? this.step === 3}}
          <div class="modal__masq_onboarding__text">{{= _('No more need for the Cloud! Your preferences and personnal data are stored directly on your devices, they are encrypted to guarantee their security. You are the owner of your data.')}}</div>
        {{?? this.step === 4}}
          <div class="modal__masq_onboarding__text">{{= _('In the final release you will be able to synchronize your Masq profile between all your devices in real time without any Cloud!')}}</div>
        {{?}}

        <div class="modal__masq_onboarding__slider">
          <div class="modal__masq_onboarding__dot {{= this.step === 1 && 'modal__masq_onboarding__dot--active'}}"></div>
          <div class="modal__masq_onboarding__dot {{= this.step === 2 && 'modal__masq_onboarding__dot--active'}}"></div>
          <div class="modal__masq_onboarding__dot {{= this.step === 3 && 'modal__masq_onboarding__dot--active'}}"></div>
          <div class="modal__masq_onboarding__dot {{= this.step === 4 && 'modal__masq_onboarding__dot--active'}}"></div>
        </div>

        <div class="modal__masq_onboarding__buttons">
          <button class="modal__masq_onboarding__button" {{= click(this.openMasq, this) }}>{{= _('Activate Masq') }}</button>
        </div>
      </div>
    </div>
</div>

